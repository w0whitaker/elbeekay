---
layout: layouts/base.njk
---
<div class="flex flex-col min-h-screen">
  {% include "partials/header.njk" %}
  <div class="flex-1 flex flex-col sm:flex-row">
    <main class="[ mt-s px-s py-s] [ flex-1 ]">
      <div class="flex flex-col">
        <h1 class="py-xs text-base font-bold text-light bg-dark text-center">
            <span>{{ title }}</span><span class="text-step--2 font-normal"> (or something more interesting)</span>
        </h1>
        <div class="[ flex-1 ] [ mt-l ]">
          {{ content | safe }}
        </div>
      </div>
    </main>
    <div class="[ order-first ] [ p-s ]">
      {% include "partials/nav.njk" %}
    </div>
  </div>
  {% include "partials/footer.njk" %}
</div>