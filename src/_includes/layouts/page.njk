---
layout: layouts/base.njk
---
<div class="flex flex-col min-h-screen">
  {% include "partials/header.njk" %}
  <div class="flex-1 flex flex-col sm:flex-row">
    <main class="[ mt-s px-s py-s] [ flex-1 ]">
      <div class="flex flex-col">
        <h1 class="[ py-xs ] text:[ text-step-4 font-bold text-dark ] [  border-solid border-b-4 border-secondary ]">
            <span>{{ title }}</span>
        </h1>
        <div class="[ flex-1 ] [ mt-l ]">
          {{ content | safe }}
        </div>
      </div>
    </main>
    <div class="[ order-first ] [ p-s ]">
      {% include "partials/nav.njk" %}
    </div>
  </div>
  {% include "partials/footer.njk" %}
</div>