---
layout: layouts/gallery.njk
pageTitle: "Projects."
permalink: "/projects/"
---
<ul>
  {%- for project in collections.projects -%}
  <li>
    <div class="layout:[ flex flex-col sm:flex-row gap-s justify-between basis-1/2 ] spacing:[ mb-m pr-l ]">
      <div class="sm:flex sm:flex-col sm:gap-l">
        <h3>
          <a href="{{ project.data.title | slugify }}/">{{ project.data.title }}</a>
        </h3>
        <p class="sm:basis-10 sm:shrink">{{ project.data.blurb }}</p>
      </div>
      <img src="{{ project.data.thumbnail | imageUrl }}" alt="{{ project.data.thumbnail | imageUrl }}" class="placeholder" >
    </div>
  </li>
  {%- endfor -%}
</ul>